<section class="signup pt-5 col-4 mx-auto">
  <div class="container">
    <div class="signup-content">
      <form action="/signin" method="POST">
        <h2 class="form-title">Iniciar sesión</h2>
        <div class="row">
          <div class="form-group col-lg-12">
            <label for="username">Usuario o Email</label>
            <input type="text" class="form-input" name="username" id="username" placeholder="Usuario o email" autofocus />
          </div>
          <div class="form-group col-lg-12">
            <label for="password">Contraseña</label>
            <input type="password" class="form-input" name="password" id="password" placeholder="Contraseña" />
          </div>
        </div>
        <div class="form-group">
          <button class="form-submit"> Inicia sesión </button>
          {{>message}} 
        </div>

      </form>
      <p class="loginhere"> ¿Aun no tienes una cuenta? <a href="/signup" class="loginhere-link">Crear cuenta</a></p>

    </div>
  </div>
</section>