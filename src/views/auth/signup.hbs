<section class="signup col-8 mx-auto pt-5">
  <div class="container">
    <div class="signup-content">
      <form action="/signup" method="POST">
        <h2 class="form-title">Registrarse</h2>
        <div class="row">
          <div class="form-group col-lg-6">
            <label for="firstName">Primer nombre</label>
            <input type="text" class="form-input" name="firstName" id="firstName" placeholder="Primer nombre"  autofocus/>
          </div>
          <div class="form-group col-lg-6">
            <label for="lastName">Primer apellido</label>
            <input type="text" class="form-input" name="lastName" id="lastName" placeholder="Primer apellido" />
          </div>
          <div class="form-group col-lg-6">
            <label for="username">Usuario</label>
            <input type="text" class="form-input" name="username" id="username" placeholder="Usuario" />
          </div>
          <div class="form-group col-lg-6">
            <label for="email">Correo electrónico</label>
            <input type="email" class="form-input" name="email" id="email" placeholder="Correo electrónico" />
          </div>
          <div class="form-group col-lg-6">
            <label for="password">Contraseña</label>
            <small class="text-danger">(Minimo 6 digitos)</small>
            <input type="password" class="form-input" name="password" id="password" placeholder="Contraseña" />
          </div>
          <div class="form-group col-lg-6">
            <label for="passwordRepeat">Repetir contraseña</label>
            <input type="password" class="form-input" name="passwordRepeat" id="passwordRepeat" placeholder="Repetir contraseña" />
          </div>
        </div>
        <div class="form-group">
          <button class="form-submit"> Regitrarse </button>
          {{>message}} 
        </div>
      <p class="loginhere"> ¿Ya tienes una cuenta? <a href="/" class="loginhere-link">Iniciar sesión</a>

      </form>
      </p>
    </div>
  </div>
</section>