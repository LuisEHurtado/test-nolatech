  {{>navbar}}

<section class="signup col-12 mx-auto pt-1">
  <div class="container">
    <div class="signup-content">
      <h2 class="text-center">Usuarios</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Usuario</th>
            <th>Correo</th>
            <th>Acción</th>
          </tr>
        </thead>
        <tbody>
            {{#each users}}
              <tr>
                <td>{{first_name}} </td>
                <td>{{last_name}} </td>
                <td>{{username}} </td>
                <td>{{email}} </td>
                <td>
                   <a class="btn btn-primary" href="users/edit/{{id}}">
                        Editar
                    </a>
                  
                   <a class="btn btn-danger" href="/users/delete/{{id}}">
                      Eliminar
                    </a>
                </td>
              </tr>
              {{else}}
              <tr>
                  <td>Sin información</td>
              </tr>
           {{/each}}
        </tbody>

      </table>
   
    </div>


  </div>
</section>